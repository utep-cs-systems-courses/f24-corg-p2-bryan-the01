#Makefile
COMMON_OBJECTS  =
CPU             = msp430g2553
CFLAGS          = -mmcu=${CPU} -I../h
LDFLAGS		= -L/opt/ti/msp430_gcc/include

CC              = msp430-elf-gcc
AS              = msp430-elf-as

all: button.elf

button.elf: ${COMMON_OBJECTS} main.o switches.o led.o buzzer.o alarm.o
	${CC} ${CFLAGS} ${LDFLAGS} -o $@ $^

load: $(OUT)
	msp430loader.sh $(OUT)

clean:
	rm -f *.o *.elf
